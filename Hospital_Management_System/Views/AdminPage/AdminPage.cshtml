 @model AdminAllDataViewModel;

<div class="d-sm-flex align-items-center justify-content-between mb-4">
    <h2>Admin Details</h2>
    <button type="button" class="btn btn-success" data-bs-toggle="modal" data-bs-target="#AdminModal">Add Admin</button>
</div>
<div class="modal fade" id="AdminModal" data-bs-backdrop="static" data-bs-keyboard="false" tabindex="-1" aria-labelledby="AdminModalLabel" aria-hidden="true">

    <div class="modal-dialog">
        <div class="modal-content">
            <div class="modal-header">
                <h5 class="modal-title" id="AdminModalLabel">Add Details</h5>
                <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close" onclick="ClearAddAdminForm()"></button>
            </div>

            <div class="modal-body">

                <form id="AddAdmin">
                    <div class="row">
                        <div class="col-md-6">
                            <div class="mb-3">
                                <label for="name" class="form-label">Name : </label>
                                <input id="name" type="text" asp-for="User.name" class="form-control" />
                            </div>
                             <span asp-validation-for="User.name" class="text-danger"></span>
                        </div>
                        <div class="col-md-6">
                            <div class="mb-3">
                                <label for="email" class="form-label">Email Id : </label>
                                <input id="email" type="email" asp-for="User.email" class="form-control" />
                            </div>
                            <span asp-validation-for="User.email" class="text-danger"></span>
                        </div>
                    </div>

                    <div class="row">

                        <div class="col-md-6">
                            <div class="mb-3">
                                <label for="password" class="form-label">Password : </label>
                                <input id="password" type="password" asp-for="User.password" class="form-control" />
                            </div>
                            <span asp-validation-for="User.password" class="text-danger"></span>
                        </div>

                        <div class="col-md-6">
                            <div class="mb-3">
                                <label for="phone" class="form-label">Phone Number : </label>
                                <input id="phone" type="text" asp-for="AdminPage.phone" class="form-control" maxlength="10"/>
                            </div>
                             <span asp-validation-for="AdminPage.phone" class="text-danger"></span>
                        </div>
                    </div>

                    <div class="row">
                        <div class="col-md-6">
                            <div class="mb-3">
                                <label for="DOB" class="form-label">Date of Birth :</label>
                                <input id="DOB" type="date" asp-for="AdminPage.DateOfBirth" class="form-control" />
                            </div>
                            <span asp-validation-for="AdminPage.DateOfBirth" class="text-danger"></span>
                        </div>
                        <div class="col-md-6">
                            <div class="mb-3">
                                <label for="gender" class="form-label">Gender:</label>
                                <select id="gender" asp-for="AdminPage.gender" class="form-control">
                                    <option value="">Please select one…</option>
                                    <option value="female">Female</option>
                                    <option value="male">Male</option>
                                    <option value="other">Other</option>
                                </select>
                            </div>
                             <span asp-validation-for="AdminPage.gender" class="text-danger"></span>
                        </div>
                    </div>

                    <div class="mb-3">
                        <label for="address" class="form-label">Address : </label>
                        <input id="address" type="text" asp-for="AdminPage.address" class="form-control" />
                    </div>
                     <span asp-validation-for="AdminPage.address" class="text-danger"></span>

                    <div class="modal-footer">
                        <button type="button" onclick="AddAdmin()" class="btn btn-primary">Save changes</button>
                    </div>

                </form>
            </div>
        </div>
    </div>
</div>

<div class="modal fade" id="updatemodal" data-bs-backdrop="static" data-bs-keyboard="false" tabindex="-1" aria-labelledby="UpdateModalLabel" aria-hidden="true">

    <div class="modal-dialog">
        <div class="modal-content">
            <div class="modal-header">
                <h5 class="modal-title" id="UpdateModalLabel">Update Details</h5>
                <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close" onclick="ClearUpdateAdminForm()"></button>
            </div>

            <div class="modal-body">

                <form id="updateForm">
                    <input hidden id="u_id" />
                    <div class="row">
                        <div class="col-md-6">
                            <div class="mb-3">
                                <label for="name" class="form-label">Name : </label>
                                <input id="u_name" type="text" asp-for="User.name" class="form-control" />
                            </div>
                            <span asp-validation-for="User.name" class="text-danger"></span>
                        </div>
                        <div class="col-md-6">
                            <div class="mb-3">
                                <label for="email" class="form-label">Email Id : </label>
                                <input id="u_email" type="email" asp-for="User.email" class="form-control" />
                            </div>
                            <span asp-validation-for="User.email" class="text-danger"></span>
                        </div>
                    </div>

                    <div class="row">
                        <div class="col-md-6">
                            <label for="gender" class="form-label">Gender:</label>
                            <select id="u_gender" asp-for="AdminPage.gender" class="form-control">
                                <option value="">Please select one…</option>
                                <option value="female">Female</option>
                                <option value="male">Male</option>
                                <option value="other">Other</option>
                            </select>
                            <span asp-validation-for="AdminPage.gender" class="text-danger"></span>
                        </div>
                        <div class="col-md-6">
                            <div class="mb-3">
                                <label for="phone" class="form-label">Phone Number : </label>
                                <input id="u_phone" type="text" asp-for="AdminPage.phone" class="form-control" maxlength="10" />
                            </div>
                            <span asp-validation-for="AdminPage.phone" class="text-danger"></span>
                        </div>
                    </div>

                    <div class="row">
                        <div class="col-md-6">
                            <div class="mb-3">
                                <label for="DOB" class="form-label">Date of Birth :</label>
                                <input id="u_DOB" type="date" asp-for="AdminPage.DateOfBirth" class="form-control" />
                            </div>
                            <span asp-validation-for="AdminPage.DateOfBirth" class="text-danger"></span>
                        </div>
                        <div class="col-md-6">
                            <div class="mb-3">
                                <label for="address" class="form-label">Address : </label>
                                <input id="u_address" type="text" asp-for="AdminPage.address" class="form-control" />
                            </div>
                            <span asp-validation-for="AdminPage.address" class="text-danger"></span>
                        </div>
                    </div>

                    <div class="modal-footer">
                        <button type="button" onclick="UpdateAdmin()" class="btn btn-primary">Save changes</button>
                    </div>

                </form>
            </div>
        </div>
    </div>
</div>


<div class="modal fade" id="Viewmodal" data-bs-backdrop="static" data-bs-keyboard="false" tabindex="-1" aria-labelledby="ViewmodalLabel" aria-hidden="true">

    <div class="modal-dialog">
        <div class="modal-content">
            <div class="modal-header">
                <h5 class="modal-title" id="ViewmodalLabel">View Details</h5>
                <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close" onclick="ClearViewAdminForm()"></button>
            </div>

            <div class="modal-body">

                <form>
                    <input hidden id="v_id" readonly />
                    <div class="row">
                        <div class="col-md-6">
                            <div class="mb-3">
                                <label for="name" class="form-label">Name : </label>
                                <input id="v_name" type="text" name="name" class="form-control" readonly />
                            </div>
                        </div>
                        <div class="col-md-6">
                            <div class="mb-3">
                                <label for="email" class="form-label">Email Id : </label>
                                <input id="v_email" type="email" name="email" class="form-control" readonly />
                            </div>
                        </div>
                    </div>

                    <div class="row">
                        <div class="col-md-6">
                            <label for="gender" class="form-label">Gender:</label>
                            <select id="v_gender" name="gender" class="form-control" readonly>
                                <option value="">Please select one…</option>
                                <option value="female">Female</option>
                                <option value="male">Male</option>
                                <option value="other">Other</option>
                            </select>
                        </div>
                        <div class="col-md-6">
                            <div class="mb-3">
                                <label for="phone" class="form-label">Phone Number : </label>
                                <input id="v_phone" type="text" name="phone" class="form-control" readonly />
                            </div>
                        </div>
                    </div>

                    <div class="row">
                        <div class="col-md-6">
                            <div class="mb-3">
                                <label for="DOB" class="form-label">Date of Birth :</label>
                                <input id="v_DOB" type="date" name="DOB" class="form-control" readonly />
                            </div>
                        </div>
                        <div class="col-md-6">
                            <div class="mb-3">
                                <label for="address" class="form-label">Address : </label>
                                <input id="v_address" type="text" name="address" class="form-control" readonly />
                            </div>
                        </div>
                    </div>

                </form>
            </div>
        </div>
    </div>
</div>

<div class="card w-100 shadow-lg">
    <div class="card-body">
        <table class="table table-bordered" id="myTable" style="width:100% !important">
            <thead>
                <tr>
                    <th>id</th>
                    <th>Name</th>
                    <th>Email</th>
                    <th>Action</th>
                </tr>
            </thead>

        </table>
    </div>
</div>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}


