<script>
    $(document).ready(function () {

        get();
    });


    function get() {
        debugger;
        // Destroy the existing DataTable
        if ($.fn.DataTable.isDataTable('#myTable')) {
            $('#myTable').DataTable().destroy();
        }

        $.ajax({

            type: "GET",
            url: "/AdminPage/AdminList",

            success: function (data) {
                $('#myTable').DataTable({
                    data: data,
                    columns: [
                        { data: 'id' },
                        { data: 'name' },
                        { data: 'phone' },
                        { data: 'email' },
                        {
                            data: null,
                            render: function (data, type, row) {
                                return `<button type="button" onclick="popupdatedata(` + row.id + `)" class="btn btn-primary" data-bs-toggle="modal" data-bs-target="#updatemodal"><i class="fa-solid fa-pen-to-square"></i></button>|<button type="button" onclick="ViewAdmin(` + row.id + `)" class="btn btn-primary" data-bs-toggle="modal" data-bs-target="#Viewmodal"><i class="fa-solid fa-eye"></i></button>|<button type="button" onclick="DeleteAdmin(` + row.id + `)" class="btn btn-primary" ><i class="fa-solid fa-trash-can-arrow-up"></i></button>`;
                            }
                        }
                    ]
                });
            },
            error: function (textStatus, errorThrown) {
                Success = false;
            }
        });
    }

    function AddAdmin() {

       
        var oModel = {

            name: $('#name').val(),
            email: $('#email').val(),
            password: $('#password').val(),
            phone: $('#phone').val(),
            age: $('#age').val(),
            gender: $('#gender').val(),
            address: $('#address').val()
        }
        debugger;

        debugger;
        var formData = new FormData();
        for (var key in oModel) {
            formData.append(key, oModel[key])
        }
        debugger;
        Swal.fire({
            title: "Are you sure?",
            text: "You won't be able to revert this!",
            icon: "warning",
            showCancelButton: true,
            confirmButtonColor: "#3085d6",
            cancelButtonColor: "#d33",
            confirmButtonText: "Yes, add it!"
        }).then((result) => {
            if (result.isConfirmed) {
                $.ajax({
                    type: "POST",
                    url: "/AdminPage/AddAdmin",
                    data: formData,
                    processData: false,
                    contentType: false,
                    cache: false,
                    success: function (data) {
                        ClearForm();
                        Swal.fire({
                            title: "Good job!",
                            text: "Patient saved successfully!",
                            icon: "success",
                            button: "Ok",
                        });
                        $('#AdminModal').modal('hide');
                        get();
                        ClearForm();
                    },
                    error: function (error) {
                        console.log("Error saving employee:", error);
                        Swal.fire("Oops", "An error occurred while saving your data, Please try again later.", "error");
                    }
                });
            }
        });
    }

    function DeleteAdmin(id) {
        // var ans = confirm("are you sure you want to delete this record?");
        Swal.fire({
            title: "Are you sure?",
            text: "You won't be able to revert this!",
            icon: "warning",
            showCancelButton: true,
            confirmButtonColor: "#3085d6",
            cancelButtonColor: "#d33",
            confirmButtonText: "Yes, delete it!"
        }).then((result) => {
            if (result.isConfirmed) {

                $.ajax({
                    type: "POST",
                    url: "/AdminPage/DeleteAdmin/" + id,
                    success: function (data) {

                        swal.fire("Admint deleted successfully!", {
                            icon: "success",
                        }).then(() => {
                            get(); // refresh data after deletion
                        });
                    },
                    error: function (errormessage) {
                        swal.fire({
                            title: "error while delete admin",
                            text: "close",
                            icon: "error"
                        });
                    }
                });
            }
        });
    }


    function popupdatedata(id) {
        debugger;

        $.ajax({
            type: "POST",
            url: "/AdminPage/GetAdminByID/" + id,
            success: function (data) {
                $('#u_id').val(data.id),
                    $('#u_name').val(data.name),
                    $('#u_email').val(data.email),
                    $('#u_gender').val(data.gender),
                    $('#u_phone').val(data.phone),
                    $('#u_age').val(data.age),
                    $('#u_address').val(data.address)
            }
        });
    }


    function UpdateAdmin() {
        debugger;

        var employeeID = {
            id: $('#u_id').val()
        }

        var updatedModel = {

            name: $('#u_name').val(),
            email: $('#u_email').val(),
            gender: $('#u_gender').val(),
            phone: $('#u_phone').val(),
            age: $('#u_age').val(),
            address: $('#u_address').val(),
            gender: $('#u_gender').val()
        };

        var formData = new FormData();
        formData.append("Id", employeeID.id);
        formData.append("model", JSON.stringify(updatedModel));

        debugger;
        Swal.fire({
            title: "Are you sure?",
            text: "You won't be able to revert this!",
            icon: "warning",
            showCancelButton: true,
            confirmButtonColor: "#3085d6",
            cancelButtonColor: "#d33",
            confirmButtonText: "Yes, update it!"
        }).then((result) => {
            if (result.isConfirmed) {
                $.ajax({
                    type: "POST",
                    url: "/AdminPage/UpdateAdmin",
                    data: formData,
                    processData: false,
                    contentType: false,
                    cache: false,
                    success: function (data) {
                        $('#updatemodal').modal('hide');
                        Swal.fire({
                            title: "Good job!",
                            text: "Admin update successfully!",
                            icon: "success",
                            button: "Ok",
                        });

                        // datatable.destroy();
                        get();
                    },
                    error: function () {
                        Swal.fire({
                            title: "Error while updating!",
                            text: "close",
                            icon: "error"
                        });
                    }
                });
            }
        });
    }


    function ViewAdmin(id) {
        debugger;

        $.ajax({
            type: "POST",
            url: "/AdminPage/GetAdminByID/" + id,
            success: function (data) {
                $('#v_id').val(data.id),
                    $('#v_name').val(data.name),
                    $('#v_email').val(data.email),
                    $('#v_phone').val(data.phone),
                    $('#v_age').val(data.age),
                    $('#v_address').val(data.address),
                    $('#v_gender').val(data.gender)
            }

        });
    }

    function ClearForm() {

        $('#name').val('');
        $('#email').val('');
        $('#password').val('');
        $('#phone').val('');
        $('#age').val('');
        $('#address').val('');
        $('#gender').val('');

    }


</script>
