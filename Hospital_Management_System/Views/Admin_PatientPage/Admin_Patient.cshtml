    }

    function ClearForm() {

        $('#u_firstname').val('');
        $('#u_lastname').val('');
        $('#u_email').val('');
        $('#u_phone').val('');
        $('#u_age').val('');
        $('#u_disease').val('');
        $('#u_address').val('');
        $('#u_gender').val('');

    }


</script>