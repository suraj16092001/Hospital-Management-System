<script>

    $(document).ready(function () {

        get();
    });


    function get() {
        debugger;
        // Destroy the existing DataTable
        if ($.fn.DataTable.isDataTable('#myTable')) {
            $('#myTable').DataTable().destroy();
        }

        $.ajax({

            type: "GET",
            url: "/Admin_PatientPage/PatientList",

            success: function (data) {
                $('#myTable').DataTable({
                    data: data,
                    columns: [
                        { data: 'id' },
                        { data: 'firstname' },
                        { data: 'phone' },
                        { data: 'disease' },
                        { data: 'address' },
                        {
                            data: null,
                            render: function (data, type, row) {
                                return `<button type="button" onclick="popupdatedata(` + row.id + `)" class="btn btn-primary" data-bs-toggle="modal" data-bs-target="#updatemodal"><i class="fa-solid fa-pen-to-square"></i></button>|<button type="button" onclick="ViewModal(` + row.id + `)" class="btn btn-primary" data-bs-toggle="modal" data-bs-target="#ViewModal"><i class="fa-solid fa-eye"></i></button>|<button type="button" onclick="DeletePatient(` + row.id + `)" class="btn btn-primary" ><i class="fa-solid fa-trash-can-arrow-up"></i></button>|<button type="button" onclick="BookAppointment(` + row.id + `)" class="btn btn-primary"  data-bs-toggle="modal" data-bs-target="#appointmentModal">Book Appointment</button>`;
                            }
                        }
                    ]
                });
            },
            error: function (textStatus, errorThrown) {
                Success = false;
            }
        });
    }

    function BookAppointment()
    {
        var model = {
            disease: $('#a_disease').val(),
            doctor: $('#a_doctor').val(),
            appointment_date: $('#a_appointment_date').val(),
            appointment_time: $('#a_appointment_time').val()
        }
        
        var formData = new FormData();
        formData.append("model", JSON.stringify(model));

        $.ajax({
            type: "POST",
            url: "/Admin_PatientPage/BookAppointment",
            data: formData,
            processData: false,
            contentType: false,
            cache: false,
            success: function (data) {
                ClearForm();
                Swal.fire({
                    title: "Good job!",
                    text: "Appointment saved successfully!",
                    icon: "success",
                    button: "Ok",
                });
                $('#appointmentModal').modal('hide');
                get();
            },
            error: function (error) {
                console.log("Error saving employee:", error);
                Swal.fire("Oops", "An error occurred while saving your data, Please try again later.", "error");
            }
        })
    }


    // Add patient function
    function AddPatient() {

        ClearForm();
    
        var oModel = {

            firstname: $('#firstname').val(),
            lastname: $('#lastname').val(),
            email: $('#email').val(),
            password: $('#password').val(),
            phone: $('#phone').val(),
            age: $('#age').val(),
            disease: $('#disease').val(),
            address: $('#address').val(),
            gender: $('#gender').val()
        }
        debugger;

        var formData = new FormData();
        formData.append("model", JSON.stringify(oModel));
        debugger;
        $.ajax({
            type: "POST",
            url: "/Admin_PatientPage/AddPatient",
            data: formData,
            processData: false,
            contentType: false,
            cache: false,
            success: function (data) {
                ClearForm();
                Swal.fire({
                    title: "Good job!",
                    text: "Patient saved successfully!",
                    icon: "success",
                    button: "Ok",
                });
                $('#exampleModal').modal('hide');
                get();
            },
            error: function (error) {
                console.log("Error saving employee:", error);
                Swal.fire("Oops", "An error occurred while saving your data, Please try again later.", "error");
            }
        })

    }

    function DeletePatient(id) {
        // var ans = confirm("Are you sure you want to delete this Record?");
        Swal.fire({
            title: "Are you sure?",
            text: "You won't be able to revert this!",
            icon: "warning",
            showCancelButton: true,
            confirmButtonColor: "#3085d6",
            cancelButtonColor: "#d33",
            confirmButtonText: "Yes, delete it!"
        }).then((result) => {
            if (result.isConfirmed) {

                $.ajax({
                    type: "POST",
                    url: "/Admin_PatientPage/DeletePatient/" + id,
                    success: function (data) {

                        swal.fire("Employee deleted successfully!", {
                            icon: "success",
                        }).then(() => {
                            get(); // Refresh data after deletion
                        });
                    },
                    error: function (errormessage) {
                        Swal.fire({
                            title: "error while delete employee",
                            text: "close",
                            icon: "error"
                        });
                    }
                });
            }
        });
    }

    function popupdatedata(id) {
        debugger;

        $.ajax({
            type: "POST",
            url: "/Admin_PatientPage/GetPatientByID/" + id,
            success: function (data) {
                $('#update_id').val(data.id),
                    $('#u_firstname').val(data.firstname),
                    $('#u_lastname').val(data.lastname),
                    $('#u_email').val(data.email),
                    $('#u_phone').val(data.phone),
                    $('#u_age').val(data.age),
                    $('#u_disease').val(data.disease),
                    $('#u_address').val(data.address),
                    $('#u_gender').val(data.gender)
            }
        });
    }


    function updatePatient() {
        debugger;

        var employeeID = {
            id: $('#update_id').val()
        }

        var updatedModel = {

            firstname: $('#u_firstname').val(),
            lastname: $('#u_lastname').val(),
            email: $('#u_email').val(),
            phone: $('#u_phone').val(),
            age: $('#u_age').val(),
            disease: $('#u_disease').val(),
            address: $('#u_address').val(),
            gender: $('#u_gender').val()
        };

        var formData = new FormData();
        formData.append("Id", employeeID.id);
        formData.append("model", JSON.stringify(updatedModel));

        debugger;

        $.ajax({
            type: "POST",
            url: "/Admin_PatientPage/UpdatePatient",
            data: formData,
            processData: false,
            contentType: false,
            cache: false,
            success: function (data) {
                $('#updatemodal').modal('hide');
                Swal.fire({
                    title: "Good job!",
                    text: "Employee update successfully!",
                    icon: "success",
                    button: "Ok",
                });

                // datatable.destroy();
                get();
            },
            error: function () {
                Swal.fire({
                    title: "Error while updating!",
                    text: "close",
                    icon: "error"
                });
            }
        });

    }

    function ViewModal(id) {
        debugger;

        $.ajax({
            type: "POST",
            url: "/Admin_PatientPage/GetPatientByID/" + id,
            success: function (data) {
                $('#view_id').val(data.id),
                    $('#view_firstname').val(data.firstname),
                    $('#view_lastname').val(data.lastname),
                    $('#view_email').val(data.email),
                    $('#view_phone').val(data.phone),
                    $('#view_age').val(data.age),
                    $('#view_disease').val(data.disease),
                    $('#view_address').val(data.address),
