<div class="card w-100 shadow-sm">
    <div class="card-body">
        <table class="table table-striped" id="DrTable" style="width:100% !important">
            <thead class="table-dark">
                <tr>
                    <th>Id</th>
                    <th>Name</th>
                    <th>Phone</th>
                    <th>Specialist</th>
                    <th>Action</th>
                </tr>
            </thead>
