<script>

    $(document).ready(function () {

        get();
    });


    function get() {
        debugger;
        // Destroy the existing DataTable
        if ($.fn.DataTable.isDataTable('#DrTable')) {
            $('#DrTable').DataTable().destroy();
        }

        $.ajax({

            type: "GET",
            url: "/Admin_DoctorPage/DoctorList",

            success: function (data) {
                $('#DrTable').DataTable({
                    data: data,
                    columns: [
                        { data: 'id' },
                        { data: 'name' },
                        { data: 'phone' },
                        { data: 'specialist' },
                        {
                            data: null,
                            render: function (data, type, row) {
                                return ` <button type="button" onclick="popupdatedata(` + row.id + `)" class="btn btn-primary" data-bs-toggle="modal" data-bs-target="#UpdateDoctorModal"><i class="fa-solid fa-pen-to-square"></i></button>|<button type="button" onclick="Viewdata(` + row.id + `)" class="btn btn-primary" data-bs-toggle="modal" data-bs-target="#ViewDoctorModal"><i class="fa-solid fa-eye"></i></button>|<button type="button" onclick="DeleteDoctor(` + row.id + `)" class="btn btn-primary" ><i class="fa-solid fa-trash-can-arrow-up"></button>`;
                            }
                        }
                    ]
                });
            },
            error: function (textStatus, errorThrown) {
                Success = false;
            }
        });
    }


    function AddDoctor() {

        var oModel = {

            name: $('#name').val(),
            email: $('#email').val(),
            password: $('#password').val(),
            specialist: $('#specialist').val(),
            gender: $('#gender').val(),
            qualification: $('#qualification').val(),
            phone: $('#phone').val(),
            age: $('#age').val(),
            address: $('#address').val(),
        }

        var formData = new FormData();
        formData.append("model", JSON.stringify(oModel));

        $.ajax({
            type: "POST",
            url: "/Admin_DoctorPage/AddDoctor",
            data: formData,
            processData: false,
            contentType: false,
            cache: false,
            success: function (data) {

                debugger;
                Swal.fire({
                    title: "Good job!",
                    text: "Doctor saved successfully!",
                    icon: "success",
                    button: "Ok",
                });
                $('#AddDoctorModal').modal('hide');
                get();
            },
            error: function (error) {
                console.log("Error saving Doctor:", error);
                Swal.fire("Oops", "An error occurred while saving your data, Please try again later.", "error");
            }
        })
    }

    function DeleteDoctor(id) {
        // var ans = confirm("Are you sure you want to delete this Record?");
        Swal.fire({
            title: "Are you sure?",
            text: "You won't be able to revert this!",
            icon: "warning",
            showCancelButton: true,
            confirmButtonColor: "#3085d6",
            cancelButtonColor: "#d33",
            confirmButtonText: "Yes, delete it!"
        }).then((result) => {
            if (result.isConfirmed) {

                $.ajax({
                    type: "POST",
                    url: "/Admin_DoctorPage/DeleteDoctor/" + id,
                    success: function (data) {

                        swal.fire("Doctor deleted successfully!", {
                            icon: "success",
                        }).then(() => {
                            get(); // Refresh data after deletion
                        });
                    },
                    error: function (errormessage) {
                        Swal.fire({
                            title: "error while delete Doctor",
                            text: "close",
                            icon: "error"
                        });
                    }
                });
            }
        });
    }

    function popupdatedata(id) {
        debugger;

        $.ajax({
            type: "POST",
            url: "/Admin_DoctorPage/GetDoctorByID/" + id,
            success: function (data) {
                $('#u_id').val(data.id),
                    $('#u_name').val(data.name),
                    $('#u_email').val(data.email),
                    $('#u_phone').val(data.phone),
                    $('#u_specialist').val(data.specialist),
                    $('#u_gender').val(data.gender),
                    $('#u_qualification').val(data.qualification),
                    $('#u_age').val(data.age),
                    $('#u_address').val(data.address)
            }

        });
    }


    function UpdateDoctor() {


        var employeeID = {
            id: $('#u_id').val()
        }

        var updatedModel = {

            name: $('#u_name').val(),
            email: $('#u_email').val(),
            phone: $('#u_phone').val(),
            specialist: $('#u_specialist').val(),
            gender: $('#u_gender').val(),
            qualification: $('#u_qualification').val(),
            age: $('#u_age').val(),
            address: $('#u_address').val(),
        };

        var formData = new FormData();
        formData.append("Id", employeeID.id);
        formData.append("model", JSON.stringify(updatedModel));

        debugger;

        $.ajax({
            type: "POST",
            url: "/Admin_DoctorPage/UpdateDoctor",
            data: formData,
            processData: false,
            contentType: false,
            cache: false,
            success: function (data) {
                $('#UpdateDoctorModal').modal('hide');
                Swal.fire({
                    title: "Good job!",
                    text: "Doctor update successfully!",
                    icon: "success",
                    button: "Ok",
                });
            },
            error: function () {
                Swal.fire({
                    title: "Error while updating!",
                    text: "close",
                    icon: "error"
                });
            }
        });

    }

    function Viewdata(id) {
