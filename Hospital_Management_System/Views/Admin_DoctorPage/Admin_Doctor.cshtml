                    $('#v_email').val(data.email),
                    $('#v_phone').val(data.phone),
                    $('#v_specialist').val(data.specialist),
                    $('#v_gender').val(data.gender),
                    $('#v_qualification').val(data.qualification),
                    $('#v_age').val(data.age),
                    $('#v_address').val(data.address)
            }

        });
    }
</script>